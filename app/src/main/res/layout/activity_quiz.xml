<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.ARAH.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="QUIZ"></androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <ImageView
                android:id="@+id/iv_quiz"
                android:layout_width="80sp"
                android:layout_height="150sp"
                android:layout_marginTop="200sp"
                android:contentDescription="Icon"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_quiz" />


            <TextView
                android:id="@+id/tv_title_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="QUIZ"
                android:textColor="@color/green_text"
                android:textSize="36sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_soal"
                android:layout_width="270sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="Kamu bisa melatih dan menguji sejauh mana wawasanmu mengetahui asmaul husna dengan mengerjakan beberapa pertanyaan quiz ini"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_mulaiquiz"
                android:layout_width="200sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_margin="25sp"
                android:background="#00FF19"
                android:gravity="center"
                android:text="Mulai Quiz"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>